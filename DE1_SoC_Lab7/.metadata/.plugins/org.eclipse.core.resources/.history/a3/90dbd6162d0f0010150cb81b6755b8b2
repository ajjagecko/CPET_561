#include <stdio.h>
#include "system.h"

// point to base addresses 
volatile unsigned char *pushButtonBase_ptr = (unsigned char *) PUSHBUTTON1_BASE;
volatile unsigned char *ledsBase_ptr       = (unsigned char *) LEDS_BASE;
volatile unsigned int *ramBase_ptr        = (unsigned int *) RAMINFR_BE_0_BASE;

int byte_ram_test(unsigned char start_addr, unsigned char write_data) {
   *ledsBase_ptr = 0x00
   *(start_addr) = write_data;
   
   if(write_data != *(start_addr)) {
      *ledsBase_ptr = 0xFF;
      printf("ERROR: Address: 0x%x Read: 0x%x Expected: 0x%x", start_addr, *(start_addr), write_data);
   }
   return(0);
}

int short_ram_test(unsigned short start_addr, unsigned short write_data) {
   *ledsBase_ptr = 0x00;
   *ledsBase_ptr = 0x00
   *(start_addr) = write_data;
   
   if(write_data != *(start_addr)) {
      *ledsBase_ptr = 0xFF;
      printf("ERROR: Address: 0x%x Read: 0x%x Expected: 0x%x", start_addr, *(start_addr), write_data);
   }
   return(0);
}

int int_ram_test(unsigned int start_addr, unsigned int write_data) {
   *ledsBase_ptr = 0x00;
   *ledsBase_ptr = 0x00
   *(start_addr) = write_data;
   
   if(write_data != *(start_addr)) {
      *ledsBase_ptr = 0xFF;
      printf("ERROR: Address: 0x%x Read: 0x%x Expected: 0x%x", start_addr, *(start_addr), write_data);
   }
   return(0);
}

int ram_test(unsigned char address, unsigned int testData, unsigned char ramSize) {
   switch (ramSize) {
      case 8:
         for(char i = 0; i < 0x3FFF; i ++) {
            byte_ram_test(address, (unsigned char)testData);
         }
      break;
      
      case 16:
         for(short i = 0; i < 0x3FFF; i ++) {
            byte_ram_test((unsigned short)address, (unsigned short)testData);
         }
      break;
      
      case 32:
         for(int i = 0; i < 0x3FFF; i ++) {
            byte_ram_test((unsigned int)address, testData);
         }
      break;
      
      default:
         printf("ERROR: Invalid ramSize");
      break;
      
   }
   return(0);
}

int main(void) {

    ram_test(0,0x00,8);

    ram_test(0,0x1234,16);

    ram_test(0,0xABCDEF90,32);
	//int_ram_test(0x5000, 0x12345678, 0x12345678);
	return(0);
}
